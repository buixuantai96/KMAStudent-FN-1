<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpass.kmastudent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.DangNhap_Activity"></activity>
        <activity android:name=".Activity.DangKy_Activity"></activity>

        <activity android:name=".Activity.ChonNamKyActivity"></activity>

        <activity android:name=".Activity.ChonLopActivity"></activity>

        <activity android:name=".Activity.TrangChu_Activity"></activity>
        <activity android:name=".Activity.CalendarActivity"></activity>
        <activity
            android:name=".Activity.MonHocActivity"
            android:label="@string/monhoc"
            android:parentActivityName=".Activity.TrangChu_Activity"></activity>

        <activity
            android:name=".Activity.GioiThieuMonHocActivity"
            android:label="@string/chitietmon"
            android:parentActivityName=".Activity.MonHocActivity"></activity>

        <activity
            android:name=".Activity.DanhSachGiangVienActivity"
            android:label="@string/danhsachgiangvien"
            android:parentActivityName=".Activity.GioiThieuMonHocActivity"></activity>

        <activity
            android:name=".Activity.NoteActivity"
            android:label="@string/nhat_ky"></activity>
        <activity
            android:name=".Activity.CreateNote"
            android:label="@string/create_note"
            android:parentActivityName=".Activity.NoteActivity"></activity>

        <activity
            android:name=".Activity.DiemActivity"
            android:windowSoftInputMode="adjustNothing" >
            <!--android:windowSoftInputMode="adjustNothing" cho vào dòng trên để ko bị out keyboard -->
        </activity>

    </application>

</manifest>