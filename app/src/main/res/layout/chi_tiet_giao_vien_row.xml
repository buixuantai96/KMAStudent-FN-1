<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="13dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgGiangVien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.5"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="7">

            <TextView
                android:id="@+id/txtTenGiangVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Nguyen Manh Thang"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtKhoaGiangVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="An toan thong tin"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtEmailGiangVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="manhThang@gmail.com"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtGioiThieuGiangVien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="Xin chao viet nam hehehehehehsahdasdhashsadasasd"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2990f1"
        />

</LinearLayout>